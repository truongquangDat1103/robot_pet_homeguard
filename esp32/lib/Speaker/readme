#include "Microphone.h"
#include "Speaker.h"
#include "AudioController.h"

Microphone mic(34);
Speaker spk;
AudioController system(&mic, &spk);

void setup() {
  system.begin();
}

void loop() {
  system.recordAndPlay(3); // Thu 3 giÃ¢y rá»“i phÃ¡t láº¡i
  delay(2000);